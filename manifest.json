{
  "manifest_version": 3,
  "name": "Flying Romanized Lyrics",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://lrclib.net/*",
    "https://translate.googleapis.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://open.spotify.com/*",
        "*://music.youtube.com/*",
        "*://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}