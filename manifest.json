{
  "manifest_version": 3,
  "name": "Flying Lyrics",
  "version": "2.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://lrclib.net/*",
    "https://translate.googleapis.com/*",
    "https://i.scdn.co/*",
    "https://*.spotifycdn.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://open.spotify.com/*",
        "*://music.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}