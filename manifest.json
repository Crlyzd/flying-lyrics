{
  "manifest_version": 3,
  "name": "Flying Lyrics Pro",
  "version": "2.0",
  "permissions": ["storage"],
  "host_permissions": [
    "https://lrclib.net/*",
    "https://translate.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://open.spotify.com/*",
        "*://music.youtube.com/*",
        "*://www.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}